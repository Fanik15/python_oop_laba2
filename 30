class Employee:
    __name = "Polina"
    __age = 28
    __salary = 1000

    def __init__(self, name, age, salary):
        self.__name = name
        self.__age = age
        self.__salary = salary

    def getName(self):
        return self.__name

    def getAge(self):
        return self.__age

    def getSalary(self):
        return str(self.__salary) + "$"

    def setName(self, name):
        self.__name = name

    def setAge(self, age):
        self.__age = age

    def setSalary(self, salary):
        self.__salary = salary


employee = Employee("Dimosik", 10, 1)
print(employee.getName())
print(employee.getAge())
print(employee.getSalary())
employee.setName("Bimbam")
employee.setAge(50)
employee.setSalary(12100)
print(employee.getName())
print(employee.getAge())
print(employee.getSalary())
